  # Kubernetes configuration
  kube_context = "docker-desktop"
  release_name = "vault"
  namespace    = "vault"

  # Vault cluster configuration
  replicas     = 3
  storage_size = "10Gi"

  # UI and Ingress
  enable_ui      = true
  enable_ingress = true
  ingress_host   = "vault.local"

  # Auto-initialization settings
  auto_initialize      = true
  auto_unseal_enabled  = true
  init_key_shares      = 5
  init_key_threshold   = 3
  init_secret_name     = "vault-unseal-keys"
  init_job_cleanup_seconds = 300

  # Optional: Customize init job image
  # init_job_image = "bitnami/kubectl:1.31"